(in-microtheory CourseRecommenderMt)

(<== (satisfiedRequirement ?studentID Core)
    (evaluate ?num
        (LengthOfListFn
            (SetToListFn
                (TheClosedRetrievalSetOf ?course
                    (and
                        (courseTaken ?studentID ?course)
                        (countsTowards ?course Core)
                    )
                )
            )
        )
    )
    (greaterThanOrEqualTo ?num 6)
)

