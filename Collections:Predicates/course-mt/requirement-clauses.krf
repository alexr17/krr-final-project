;;; Need the definition for this predicate
(<== (canGraduate ?studentID)
    (satisfiedRequirement ?studentID Core)
    (satisfiedRequirement ?studentID AI)
    (satisfiedRequirement ?studentID Systems)
    (satisfiedRequirement ?studentID Theory)
    (satisfiedRequirement ?studentID SoftwareDevelopment)
    (satisfiedRequirement ?studentID Project)
    (satisfiedRequirement ?studentID TechnicalElective)
    (evaluate ?num
        (LengthOfListFn
            (SetToListFn
                (TheClosedRetrievalSetOf ?course
                    (and
                        (courseTaken ?studentID ?course)
                        (countsTowards ?course ?AnyRandomRequirement)
                    )
                )
            )
        )
    )
    (greaterThanOrEqualTo ?num 19)
)
